<%= form_for([:admin, @institution], html: {class: "form-isnline"}) do |f| %>

  <div class="form-group">
    <%= f.label :name, "Nombre de la Institución" %>
    <%= f.text_field :name, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :level, "Tipo Institución" %>
    <%= f.select(:level, Institution::INST_TYPE)  %>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-block btn-primary" %>
<% end %>
